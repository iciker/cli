{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["node"],
		"noEmit": true
	},
	"include": ["src/**/*", "scripts/package-platform.js"],
	"exclude": ["node_modules", "dist"]
}
